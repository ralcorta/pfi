############################################
# EJEMPLO: terraform.tfvars
# 
# Este archivo muestra todas las variables posibles.
# Copia este archivo a terraform.tfvars y ajusta según necesites.
#
# NOTA: Como los módulos están separados (analizer.tf y client.tf),
# normalmente usarás archivos específicos:
#   - analizer.terraform.tfvars para el analizador
#   - client.terraform.tfvars para el cliente
############################################

############################################
# Configuración General
############################################
aws_region   = "us-east-1"
account_id   = "339712899854"
project_name = "sensor-analyzer"
environment  = "production"

############################################
# Availability Zones (compartidas entre módulos)
############################################
availability_zone_1 = "us-east-1a"
availability_zone_2 = "us-east-1b"

############################################
# VPC Analizador
############################################
vpc_1_cidr                = "10.10.0.0/16"
vpc_1_public_subnet_cidr  = "10.10.1.0/24"
vpc_1_private_subnet_cidr = "10.10.2.0/24"

############################################
# VPC Cliente
############################################
vpc_2_cidr                = "10.20.0.0/16"
vpc_2_public_subnet_cidr  = "10.20.1.0/24"
vpc_2_private_subnet_cidr = "10.20.2.0/24"

############################################
# Cliente EC2
############################################
key_name      = "vockey"  # Ajusta según tu cuenta AWS
client_ami_id = "ami-0c02fb55956c7d316"  # Amazon Linux 2 us-east-1

############################################
# Traffic Mirroring (Configuración automática vía API)
############################################
# Email del cliente registrado en el dashboard
# La API asignará automáticamente el traffic_mirror_target_id y vni_cliente
# Ejemplo: client_email = "cliente@example.com"
client_email = "cliente@example.com"

# URL de la API para obtener la configuración (opcional, tiene default)
# api_url = "https://api.tudominio.com/v1/clients/terraform-config"

############################################
# Tags Globales
############################################
tags = {
  Project     = "sensor-analyzer"
  Environment = "production"
  Owner       = "rodrigo"
  Account     = "339712899854"
  Purpose     = "Ransomware-Detection"
}

